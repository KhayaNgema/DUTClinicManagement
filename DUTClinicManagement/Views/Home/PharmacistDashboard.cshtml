@{
    ViewData["Title"] = "Pharmacist";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<style>
    body {
        background-color: #f1f4f9;
    }

    .dashboard-heading {
        font-size: 2rem;
        font-weight: 600;
        color: #010123;
        margin-bottom: 2rem;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.75);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 1.5rem;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        transition: transform 0.2s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .glass-card:hover {
        transform: translateY(-5px);
    }

    .card-icon {
        font-size: 2.5rem;
        color: #010123;
        margin-bottom: 1rem;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #010123;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .card-text {
        color: #4a4a4a;
        margin-bottom: 1rem;
        flex-grow: 1;
    }

    .dashboard-link {
        background-color: #010123;
        color: white;
        padding: 10px 18px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        justify-content: flex-end;
        transition: background 0.3s ease;
        margin-top: auto;
    }

    .dashboard-link:hover {
        background-color: #01424e;
        text-decoration: none;
    }

    .card-icon-wrapper {
        position: relative;
    }
</style>

<div class="container">
    <br />
    <h2 class="dashboard-heading">Welcome, @ViewBag.LoggedInUser 👋</h2>

    <div class="row g-4">

        <div class="col-md-6 col-lg-6">
            <div class="glass-card h-100">
                <div class="card-icon-wrapper">
                    <i class="fas fa-clipboard-list card-icon"></i>
                </div>
                <div class="card-title">Medication Requests</div>
                <div class="card-text">New prescription medication requests are listed here</div>
                <a asp-controller="Medications" asp-action="MedicationPescriptionRequests" class="dashboard-link">
                    View Requests <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>


        <div class="col-md-6 col-lg-6">
            <div class="glass-card h-100">
                <div class="card-icon-wrapper">
                    <i class="fas fa-truck card-icon"></i>
                </div>
                <div class="card-title">Medication Delivery Requests</div>
                <div class="card-text">Medication delivery requests are listed here</div>
                <a asp-controller="Deliveries" asp-action="DeliveryRequests" class="dashboard-link">
                    View Requests <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>
