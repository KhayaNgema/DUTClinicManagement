@{
    ViewData["Title"] = "Delivery Personnel";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<style>
    body {
        background-color: #f1f4f9;
    }

    .dashboard-heading {
        font-size: 2rem;
        font-weight: 600;
        color: #010123;
        margin-bottom: 2rem;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.75);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 1.5rem;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        transition: transform 0.2s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .glass-card:hover {
        transform: translateY(-5px);
    }

    .card-icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        color:#010123;
    }

    .text-warning {
        color: #f0ad4e !important; /* to match bootstrap warning */
    }
    .text-success {
        color: #28a745 !important; /* to match bootstrap success */
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #010123;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .card-text {
        color: #4a4a4a;
        margin-bottom: 1rem;
        flex-grow: 1;
    }

    .dashboard-link {
        background-color: #010123;
        color: white;
        padding: 10px 18px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        justify-content: flex-end;
        transition: background 0.3s ease;
        margin-top: auto;
    }

    .dashboard-link:hover {
        background-color: #01424e;
        text-decoration: none;
    }
</style>

<div class="container">
    <br />
    <h2 class="dashboard-heading">Welcome, @ViewBag.LoggedInUser 👋</h2>

    <div class="row g-4">
        <div class="col-md-6 col-lg-6">
            <div class="glass-card h-100">
                <div class="card-icon">
                    <i class="fas fa-truck-loading"></i>
                </div>
                <div class="card-title">Pending Deliveries</div>
                <div class="card-text">Deliveries that are assigned but not yet completed.</div>
                <a asp-controller="Deliveries" asp-action="PendingDeliveries" class="dashboard-link">
                    View Pending <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

        <div class="col-md-6 col-lg-6">
            <div class="glass-card h-100">
                <div class="card-icon">
                    <i class="fas fa-history"></i>
                </div>
                <div class="card-title">Previous Deliveries</div>
                <div class="card-text">Completed delivery history is listed here.</div>
                <a asp-controller="Deliveries" asp-action="PreviousDeliveries" class="dashboard-link">
                    View History <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>
