@{
    ViewData["Title"] = "System Administrator";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<style>
    body {
        background-color: #f1f4f9;
    }

    .dashboard-heading {
        font-size: 2rem;
        font-weight: 600;
        color: #010123;
        margin-bottom: 2rem;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.75);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 1.5rem;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        transition: transform 0.2s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .glass-card:hover {
        transform: translateY(-5px);
    }

    .card-icon {
        font-size: 2.5rem;
        color: #010123;
        margin-bottom: 1rem;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #010123;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .card-text {
        color: #4a4a4a;
        margin-bottom: 1rem;
        flex-grow: 1;
    }

    .dashboard-link {
        background-color: #010123;
        color: white;
        padding: 10px 18px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        justify-content: flex-end;
        transition: background 0.3s ease;
        margin-top: auto;
    }

    .dashboard-link:hover {
        background-color: #01424e;
        text-decoration: none;
    }
</style>

<div class="container">
    <br />
    <h2 class="dashboard-heading">Welcome, @ViewBag.LoggedInUser 👋</h2>

    <div class="row g-4">
        <div class="col-md-6 col-lg-6">
            <div class="glass-card h-100">
                <div class="card-icon">
                    <i class="fas fa-calendar-check"></i>
                </div>
                <div class="card-title">Appointments</div>
                <div class="card-text">Patients appointments are listed here</div>
                <div class="stat-number">@ViewBag.SportAdminsCount</div>
                <a asp-controller="Appointments" asp-action="Appointments" class="dashboard-link">
                    View Appointments <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

        <div class="col-md-6 col-lg-6">
            <div class="glass-card h-100">
                <div class="card-icon">
                    <i class="fas fa-user-md"></i>
                </div>
                <div class="card-title">Receptionists</div>
                <div class="card-text">Our receptionists are listed here</div>
                <div class="stat-number">@ViewBag.DivisionPlayersCount</div>
                <a asp-controller="Users" asp-action="Receptionists" class="dashboard-link">
                    View Receptionists <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="glass-card h-100">
                <div class="card-icon">
                    <i class="fas fa-user-md"></i>
                </div>
                <div class="card-title">Nurses</div>
                <div class="card-text">Nurses are listed here</div>
                <div class="stat-number">@ViewBag.OfficialsCount</div>
                <a asp-controller="Users" asp-action="Nurses" class="dashboard-link">
                    View Nurses <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="glass-card h-100">
                <div class="card-icon">
                    <i class="fas fa-user-md"></i>
                </div>
                <div class="card-title">Pharmacists</div>
                <div class="card-text">Our pharmacists are listed here</div>
                <div class="stat-number">@ViewBag.ClubManagersCount</div>
                <a asp-controller="Users" asp-action="Pharmacists" class="dashboard-link">
                    View Pharmacists <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="glass-card h-100">
                <div class="card-icon">
                    <i class="fas fa-user-injured"></i>
                </div>
                <div class="card-title">Patients</div>
                <div class="card-text">Our registered patients are listed here</div>
                <div class="stat-number">@ViewBag.ClubManagersCount</div>
                <a asp-controller="Users" asp-action="Patients" class="dashboard-link">
                    View Patients <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

        <div class="col-md-6 col-lg-4">
            <div class="glass-card h-100">
                <div class="card-icon">
                    <i class="fas fa-user-md"></i>
                </div>
                <div class="card-title">Doctors</div>
                <div class="card-text">Our medical staff members are listed here</div>
                <div class="stat-number">@ViewBag.DivisionPlayersCount</div>
                <a asp-controller="Users" asp-action="Doctors" class="dashboard-link">
                    View Doctors <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

<div class="col-md-6 col-lg-4">
    <div class="glass-card h-100" style="background: rgba(255, 255, 255, 0.2); border-radius: 15px; padding: 20px; backdrop-filter: blur(10px); box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);">
        <div class="card-icon">
            <i class="fas fa-truck"></i>
        </div>
        <div class="card-title">Delivery personnels</div>
        <div class="card-text" style="font-size: 0.95rem; color: #333;">Our delivery staff responsible for handling orders and logistics</div>
        <div class="stat-number" style="font-size: 1.5rem; font-weight: bold;">@ViewBag.NewsUpdatersCount</div>
        <a asp-controller="Users" asp-action="DeliveryPersonnels" class="dashboard-link">
            View Delivery Team <i class="fas fa-arrow-right"></i>
        </a>
    </div>
</div>


        <div class="col-md-6 col-lg-4">
            <div class="glass-card h-100">
                <div class="card-icon">
                    <i class="fas fa-user-shield"></i>
                </div>
                <div class="card-title">Admins</div>
                <div class="card-text">Our system administrators are listed here</div>
                <div class="stat-number">@ViewBag.NewsUpdatersCount</div>
                <a asp-controller="Users" asp-action="NewsUpdaters" class="dashboard-link">
                    View Admins <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>
