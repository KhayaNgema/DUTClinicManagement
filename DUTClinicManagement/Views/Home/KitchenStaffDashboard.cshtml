@{
    ViewData["Title"] = "System Administrator";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<style>
    .card {
        border: none;
        border-radius: 8px;
        margin-bottom: 20px;
        background: white;
        width: 100%;
        height: 30vh;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1), 0 6px 20px rgba(0, 0, 0, 0.1); /* 3D shadow effect */
    }


    .card-title {
        color: #022D36;
        font-size: 20px;
    }

    .card-text {
        color: #022D36;
    }

    .btn-primary {
        background-color: #B0E0FC;
        color: #022D36;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #48AAAD;
        }

    .styled-button {
        background-color: #ffffff;
        color: #022D36;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 15px;
        text-decoration: none;
    }

        .styled-button span.arrow {
            margin-left: 10px;
        }

    .center-number {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 30%;
        margin: 0;
    }

    h2 {
        color: #D4D4D4;
    }
</style>

<br />

<h2>
    <div style="display: flex; align-items: center;">
        <div style="display: flex; flex-direction: column; align-items: flex-start; flex: 1; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
            <h2 style="margin: 0;">Good day @ViewBag.LoggedInUser !</h2>
        </div>
    </div>
</h2>
<br />

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6">
            <div class="card officials-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">
                        <i class="fas fa-clipboard-list text-primary me-2"></i> New Orders
                    </h5>
                    <p class="card-text">New orders are listed here</p>
                    <a asp-controller="Orders" asp-action="PendingOrders" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>New Orders</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-6 col-lg-6">
            <div class="card officials-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">
                        <i class="fas fa-box-open text-success me-2"></i> Prepared Orders
                    </h5>
                    <p class="card-text">Prepared orders are listed here</p>
                    <a asp-controller="Orders" asp-action="PreparedOrders" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Prepared Orders</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


