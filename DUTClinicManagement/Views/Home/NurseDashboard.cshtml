@{
    ViewData["Title"] = "Nurse";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<style>
    body {
        background-color: #f1f4f9;
    }

    .dashboard-heading {
        font-size: 2rem;
        font-weight: 600;
        color: #010123;
        margin-bottom: 2rem;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.75);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 1.5rem;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        transition: transform 0.2s ease;
        height: 100%;
    }

    .glass-card:hover {
        transform: translateY(-5px);
    }

    .card-icon {
        font-size: 2.5rem;
        color: #010123;
        margin-bottom: 1rem;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #010123;
        margin-bottom: 0.5rem;
    }

    .card-text {
        color: #4a4a4a;
        margin-bottom: 1rem;
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: bold;
        color: #026473;
        text-align: center;
        margin-bottom: 1rem;
    }

    .dashboard-link {
        background-color: #010123;
        color: white;
        padding: 10px 18px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: background 0.3s ease;
    }

    .dashboard-link:hover {
        background-color: #01424e;
        text-decoration: none;
    }

    .badge-message-count {
        background-color: #dc3545;
        color: white;
        font-size: 0.75rem;
        padding: 4px 8px;
        border-radius: 50%;
        position: absolute;
        top: -5px;
        right: -10px;
    }

    .card-icon-wrapper {
        position: relative;
    }
</style>

<div class="container">
    <br>
    <h2 class="dashboard-heading">Welcome, @ViewBag.LoggedInUser 👋</h2>

    <div class="row g-4">
        <!-- Appointments -->
        <div class="col-md-6 col-lg-6">
            <div class="glass-card h-100">
                <div class="card-icon-wrapper">
                    <i class="fas fa-calendar-check card-icon"></i>
                </div>
                <div class="card-title">Appointments</div>
                <div class="card-text">Appointments scheduled for patients</div>
                <div class="stat-number">@ViewBag.OfficialsCount</div>
                <a asp-controller="Appointments" asp-action="Appointments" class="dashboard-link">
                    View Appointments <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

        <!-- Referrals -->
        <div class="col-md-6 col-lg-6">
            <div class="glass-card h-100">
                <div class="card-icon-wrapper">
                    <i class="fas fa-user-md card-icon"></i>
                </div>
                <div class="card-title">Doctor Referrals</div>
                <div class="card-text">Referrals issued by the nurse</div>
                <div class="stat-number">@ViewBag.SportCoordinatorsCount</div>
                <a asp-controller="Appointments" asp-action="MyXRayRequests" class="dashboard-link">
                    View Referrals <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

        <!-- Medical History -->
        <div class="col-md-6 col-lg-6">
            <div class="glass-card h-100">
                <div class="card-icon-wrapper">
                    <i class="fas fa-notes-medical card-icon"></i>
                </div>
                <div class="card-title">Medical History</div>
                <div class="card-text">Patient records and visits</div>
                <div class="stat-number">@ViewBag.ClubAdminsCount</div>
                <a asp-controller="MedicalHistories" asp-action="PatientsMedicalHistory" class="dashboard-link">
                    View History <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>

        <!-- Chats -->
        <div class="col-md-6 col-lg-6">
            <div class="glass-card h-100 text-center d-flex flex-column justify-content-center align-items-center">
                <div class="position-relative mb-2">
                    <i class="fas fa-comments card-icon" style="font-size:40px"></i>
                    <span class="badge-message-count">4</span>
                </div>
                <div class="card-title">Chats</div>
                <div class="card-text">Follow up with patients & doctors</div>
                <a asp-controller="Chats" asp-action="Chats" class="dashboard-link mt-2">
                    Open Chats <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>
