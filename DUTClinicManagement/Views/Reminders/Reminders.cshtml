@model IEnumerable<DUTClinicManagement.Models.Reminder>
@{
    ViewData["Title"] = "Reminders";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="d-flex align-items-center justify-content-between px-3 py-3 mb-4" 
         style="background: linear-gradient(90deg, #010123 0%, #8B0000 50%, #FF0000 100%);
                border-radius: 0.75rem;">
        <div class="d-flex align-items-center">
            <a asp-controller="Home" asp-action="Index" class="text-white text-decoration-none d-inline-flex align-items-center back-link me-3">
                <i class="bi bi-chevron-left me-1"></i> Back
            </a>
            <h2 class="mb-0 text-white">Reminders</h2>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">You have no active medication reminders.</div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var reminder in Model)
            {
                var modalId = "reminderModal_" + reminder.ReminderId;

                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-body d-flex flex-wrap flex-md-nowrap justify-content-between align-items-center">
                            <div class="d-flex align-items-center mb-2 mb-md-0">
                                <i class="bi bi-calendar-event text-primary me-2 fs-4"></i>
                                <div class="fw-semibold me-4">@reminder.ExpiryDate.ToString("yyyy-MM-dd")</div>
                                <div class="fw-bold text-dark fs-6">Reminder: @reminder.ReminderMessage</div>
                            </div>

                            <div class="d-flex gap-2">
                                <button class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#@modalId">
                                    View Details
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Modal with Reminder Details -->
                    <div class="modal fade" id="@modalId" tabindex="-1" aria-labelledby="@modalId + "_label"" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-md">
                            <div class="modal-content rounded-4">
                                <div class="modal-header modal-header-custom">
                                    <h5 class="modal-title" id="@modalId + "_label"">Reminder Details</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>

                                <div class="modal-body px-4 py-3">
                                    <dl class="row">
                                        <dt class="col-sm-5">Sent Date:</dt>
                                        <dd class="col-sm-7">@reminder.SentDate.ToString("yyyy-MM-dd HH:mm")</dd>

                                        <dt class="col-sm-5">Reminder Message:</dt>
                                        <dd class="col-sm-7">@reminder.ReminderMessage</dd>

                                        <dt class="col-sm-5">Expiry Date:</dt>
                                        <dd class="col-sm-7">@reminder.ExpiryDate.ToString("yyyy-MM-dd")</dd>

                                        <dt class="col-sm-5">Status:</dt>
                                        <dd class="col-sm-7">@reminder.Status</dd>
                                    </dl>
                                </div>

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
