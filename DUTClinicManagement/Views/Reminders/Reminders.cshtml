@model IEnumerable<DUTClinicManagement.Models.Reminder>
@{
    ViewData["Title"] = "Reminders";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="d-flex align-items-center justify-content-between px-3 py-3 mb-4" 
         style="background: linear-gradient(90deg, #010123 0%, #8B0000 50%, #FF0000 100%);
                border-radius: 0.75rem;">
        <div class="d-flex align-items-center">
            <a asp-controller="Home" asp-action="Index" class="text-white text-decoration-none d-inline-flex align-items-center back-link me-3">
                <i class="bi bi-chevron-left me-1"></i> Back
            </a>
            <h2 class="mb-0 text-white">Reminders</h2>
        </div>
    </div>

   @if (!Model.Any())
    {
        <div class="alert alert-info text-center fs-5 fw-semibold">
            You have no active medication reminders.
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var reminder in Model)
            {
                var modalId = "reminderModal_" + reminder.ReminderId;
                <div class="col-12">
                    <div class="card shadow border-0 rounded-3" style="background-color: #f8f9fa;">
                        <div class="card-body d-flex flex-wrap flex-md-nowrap justify-content-between align-items-center">
                            <div class="d-flex align-items-center flex-wrap gap-3">
                                <i class="bi bi-calendar-event text-danger me-2 fs-4"></i>
                                <div class="fw-semibold me-4 text-secondary" style="min-width: 140px; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
                                    @reminder.ExpiryDate.ToString("yyyy-MM-dd")
                                </div>
                                <div class="fw-semibold text-dark fs-6 text-truncate" style="max-width: 60vw; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
                                    Reminder: @reminder.ReminderMessage
                                </div>
                            </div>
                            <div class="d-flex gap-2 mt-2 mt-md-0">
                                <button class="btn btn-outline-danger btn-sm rounded-pill px-3" data-bs-toggle="modal" data-bs-target="#@modalId" style="font-weight: 600;">
                                    View Details
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="modal fade" id="@modalId" tabindex="-1" aria-labelledby="@($"{modalId}_label")" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-lg">
                            <div class="modal-content rounded-4 shadow-lg border-0">
                                <div class="modal-header bg-danger text-white rounded-top">
                                    <h5 class="modal-title fw-bold" id="@($"{modalId}_label")">Reminder Details</h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body px-4 py-3 fs-6" style="color: #333; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-5 fw-semibold text-muted">Received at:</dt>
                                        <dd class="col-sm-7">@reminder.SentDate.ToString("yyyy/MM/dd HH:mm")</dd>
                                        <dt class="col-sm-5 fw-semibold text-muted">Reminder Message:</dt>
                                        <dd class="col-sm-7">@reminder.ReminderMessage</dd>
                                        <dt class="col-sm-5 fw-semibold text-muted">Expiry Date:</dt>
                                        <dd class="col-sm-7">@reminder.ExpiryDate.ToString("yyyy/MM/dd")</dd>
                                    </dl>
                                </div>
                                <div class="modal-footer border-0 px-4 pb-3">
                                    <button type="button" class="btn btn-outline-danger rounded-pill px-4 fw-semibold" data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>